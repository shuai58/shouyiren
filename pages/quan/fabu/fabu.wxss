.title{padding:0 4%; margin: 20rpx 0;}
.title input{line-height: 80rpx;}
.content textarea{display: block; width: 88%; margin: 0 auto;  padding:2% 3%; height: 140rpx; border-radius:10rpx; background: #f5f5f5;}
.right text{color: #ff3131;}

.right-icon{position: relative;}
.right-icon:after {
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 6px;
}

.body{background: #e2d1d1; padding: 10rpx 0;}

button{display: block; width: 90%; border: none; background:#22ac38; margin: 100rpx auto; color: #fff;}
form{padding-bottom: 60rpx;}