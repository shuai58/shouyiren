.head{position: fixed; top: 0; left: 0; z-index: 99; width: 100%; padding-bottom: 20rpx; text-align: center;}
.storename{font-size: 36rpx;color: #fff; margin: 20rpx 0;}
.storeimg image{width: 150rpx; height: 150rpx; border-radius:150rpx ;}

.box{padding-top:270rpx; padding-bottom: 160rpx; height: 640rpx;}

.storeintro {padding:30rpx 40rpx; padding-top: 0;}
.storeintro .p{font-size: 28rpx; line-height: 40rpx; color: #fff; text-align: justify; margin-bottom: 10rpx;}

.goodslist{display: flex; flex-wrap: wrap; padding: 1%; padding-top: 0;}
.goodsitem{width: 48%; margin: 1%; background: #fff; padding-bottom: 10rpx;}
.goodsitem .imgbox{width: 100%; height: 320rpx;}
.goodsitem .imgbox image{width: 100%; height: 320rpx;}
.goodsitem .name{width: 96%; height: 30rpx; margin: 20rpx 0; font-size: 28rpx; color: #666; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; line-height: 30rpx; padding:0 2%;}
.goodsitem .price{width: 96%; padding:0 2%; display: flex; justify-content: space-between; color: #ff3131;}
.goodsitem .price image{width: 30rpx;}

.picbox{position: relative; width: 100%; padding-top: 100rpx;}
.banner{width:600rpx; height: 400rpx; margin: 0 auto; border: 1px solid #000;}
.banner image{width: 100%; height: 400rpx;}
.lfbtn{position: absolute; left: 10rpx; top: 270rpx; border: 20rpx solid rgba(255,255,255,0); border-right:20rpx solid #fff;}
.rgbtn{position: absolute; right: 10rpx; top: 270rpx; border: 20rpx solid rgba(255,255,255,0); border-left:20rpx solid #fff;}

.footer{position: fixed; bottom: 115rpx; left: 0; z-index: 99; width: 100%; display: flex; padding:20rpx 0;}
.footer .itembox{ display: flex; width: 88%; margin-left: 1%;}
.footer .navitem{flex: 1; text-align: center; font-size: 26rpx;}
.footer .navitem image{display: inline-block; width: 60rpx; height: 60rpx;}
.footer .navitem .name{margin:10rpx auto; color: #fff;}
.footer .closeback image{width: 60rpx; height: 60rpx; margin-left: -2%;}

.nav{position: fixed; bottom: 0rpx; left: 0; z-index: 99; width: 100%; height: 100rpx; padding-top: 12rpx; padding-bottom: 5rpx; background: #fff; display: flex;}
.nav .navli{flex: 1; text-align: center; font-size: 26rpx;}
.nav .navli image{display: inline-block; width: 60rpx; height: 60rpx;}
.nav .navli view{margin:0rpx auto; color: #909090;}

.body{position: fixed; left: 0; right: 0; z-index: 99; width: 100%; height: 100%; background: rgba(0,0,0,0.6);}
.mapbg{position: fixed; left: 0; right: 0; z-index: 0; width: 100%; height: 100%; }

.nodata{width: 100%; text-align: center; color: #fff;}
