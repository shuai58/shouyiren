 .list{height: 100rpx; line-height: 100rpx; width: 100%; font-size: 32rpx; padding: 0rpx 30rpx; color: #666; border-bottom: 1px solid #efefef; box-sizing: border-box; background: #fff;}
.icon{width: 50rpx; height: 50rpx; margin-right: 20rpx; vertical-align: middle;}
.r-icon{width: 14rpx; height:30rpx; float: right; margin-top: 35rpx;}

.tishi{width: 100%; margin: 150rpx 0; color: #999; text-align: center;}

.mycell{padding: 10px 0;}

.hbbg{position: fixed; left: 0; bottom: 0; z-index: 999; width: 100%; height: 100%; background:rgba(0,0,0,0.6);}
.hbbg .hbbox{position: absolute; left: 0; bottom: 0; z-index: 999; width: 100%; height: 500rpx; padding: 80rpx 80rpx 30rpx 40rpx; box-sizing: border-box; background: #fff;}
.hbbg .hbbox .hblist{display: flex; justify-content: space-between; line-height: 60rpx;}
.hbbg .hbbox .hblist .red{color:#ff3131; font-size: 28rpx; margin-right: 20rpx;}
.hbbg .hbbox .hblist .sj{color: #999;}
.hbbg .hbbox .hblist .sj text{margin-right:10rpx;}
.hbbg .hbbox .close{position: absolute; right: 20rpx; top: 20rpx; width: 40rpx; height: 40rpx;}
.hbbg .hbbox .xz{position: relative;}
.hbbg .hbbox .xz:after{
	content: " ";
    display: inline-block;
    height: 4px;
    width: 8px;
    border-width: 2px 2px 0 0;
    border-color: #ff3131;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: -23px;
    transform: rotate(135deg);
}

.hongbao{border-bottom:15rpx solid #f5f5f5; border-bottom:15rpx solid #f5f5f5;}

.hbbg .zhifu{position: absolute; left: 0; bottom: 0; width: 100%; height: 400rpx; box-sizing: border-box; background: #fff;}
.hbbg .zftop{position: relative; z-index: 99; line-height: 80rpx; padding: 0 30rpx; font-size: 30rpx}
.hbbg .zftop text{color: #ff3131;}
.hbbg .zftop .close{position: absolute; right: 20rpx; top: 20rpx; width: 40rpx; height: 40rpx;}
.hbbg .zfbtn{position: absolute; left: 0; bottom: 0; width: 100%; line-height: 80rpx; background: #ff3131; color: #fff; text-align: center;}
