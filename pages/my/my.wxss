.kbox{border-bottom: 15rpx solid #f7f7f7;}
.kbox .list:last-child{border: none;}
.list{height: 100rpx; line-height: 100rpx; width: 100%; font-size: 32rpx; padding: 0rpx 30rpx; color: #666; border-bottom: 1px solid #efefef; box-sizing: border-box; background: #fff;}
.icon{width: 50rpx; height: 50rpx; margin-right: 20rpx; vertical-align: middle;}
.r-icon{width: 14rpx; height:30rpx; float: right; margin-top: 35rpx;}
.myui-tabbar {
    display: flex;
    width: 100%;
}
.myui-tabbar__icon {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
}
.myui-tabbar__label {
    text-align: center;
    color: #999999;
    font-size: 10px;
    line-height: 1.8;
}
.myui-tabbar__item {
    display: block;
    flex: 1;
    padding: 5px 0 0;
    font-size: 0;
    color: #999999;
    text-align: center;
}
.myui-mytabbar {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100%;
    padding: 2% 0;
    background-color: #fff;
}
.myui-tabbar__label{color: #666; font-size: 30rpx; margin-top: 8rpx;}
