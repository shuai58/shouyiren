 
.goodslist{display: flex; flex-wrap: wrap; padding: 1%;}
.goodsitem{width: 48%; margin: 1%; margin-bottom: 2%;}
.goodsitem .imgbox{width: 100%; height: 350rpx;}
.goodsitem .imgbox image{width: 100%; height: 350rpx;}
.name{width: 96%; height: 30rpx; margin: 20rpx 0; font-size: 28rpx; color: #666; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; line-height: 30rpx; padding:0 2%;}
.price{width: 96%; padding:0 2%; display: flex; justify-content: space-between; align-items: center; color: #ff3131;}
.price image{width: 30rpx;}
.price .jiage{display:flex; width: 200rpx; height:45rpx; line-height: 45rpx; background: #fdfdfd; white-space: nowrap; text-overflow: ellipsis; overflow: hidden;}

.glbtn{display: flex; }
.glbtn text{display:inline-block; width:50rpx; height: 40rpx; line-height: 45rpx; padding: 0 15rpx; color: #fff; font-size: 24rpx; border-radius:6rpx; background: #21ad39; margin-left: 20rpx;}
.glbtn text.del{background: #ff3131;}

.glbtn text.bianji{background: #f38315;}
